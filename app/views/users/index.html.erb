<!-- app/views/users/index.html.erb -->

<h1>Users List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone_number %></td>
        <td>
        <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm mr-1' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm mr-1' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to "New user", new_user_path %>